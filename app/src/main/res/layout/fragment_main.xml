<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textview_refresh_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_sans_text_bold_italic"
            android:text="200"
            android:textColor="#F9D16B"
            android:textSize="70sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_sans_text"
            android:text="Hz"
            android:textColor="#F9D16B"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_refresh_rate" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#F9D16B"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconTint="@color/black"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_settings"
        app:cornerRadius="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#F9D16B"
        app:icon="@drawable/ic_menu"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/black"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="180dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#F9D16B"
        />

    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textview_title_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo"
        android:textColor="#F9D16B"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/button_menu"
        app:layout_constraintStart_toStartOf="parent"
        />

    <VideoView
        android:layout_marginTop="6dp"
        android:id="@+id/video_view_one"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/textview_title_one"
        />





</androidx.constraintlayout.widget.ConstraintLayout>